<!DOCTYPE html>
<html>
  <head>
    <title>CloverWeb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navigation">
      <ul>
        <li><%= link_to 'Metric Sources', metric_sources_path %></li>
        <li><%= link_to 'Metrics', metrics_path %></li>
        <li><%= link_to 'Thresholds', thresholds_path %></li>
        <li><%= link_to 'Reports', reports_path %></li>
        <li><%= link_to 'Users', users_path %></li>
      </ul>
    </div>
    <div class="content">
      <%= yield %>
    </div>
  </body>
</html>
