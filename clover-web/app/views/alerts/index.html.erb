<p id="notice"><%= notice %></p>

<h1>Alerts</h1>

<table>
  <thead>
    <tr>
      <th>Report</th>
      <th>Status</th>
      <th>Triggered</th>
      <th>Resolved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= link_to alert.report.timestamp, report_path(alert.report.id) %></td>
        <td><%= alert.status %></td>
        <td><%= alert.triggered %></td>
        <td><%= alert.resolved %></td>
        <td><%= link_to 'Show', alert %></td>
      </tr>
    <% end %>
  </tbody>
</table>
